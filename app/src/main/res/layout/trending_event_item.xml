<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/trendingEventCardView"
    app:contentPadding="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="85sp"
            android:layout_height="85sp"
            android:id="@+id/CVTrendingImage"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IVTrendingImage"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVTrendingName"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/CVTrendingImage"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/TVDateVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TVTrendingName"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:layout_toEndOf="@id/CVTrendingImage"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:background="@drawable/rounded_corner_pink"
            android:textAlignment="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/CVBtnEventDetail"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent">
            <ImageButton
                android:id="@+id/BtnEventDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/right_arrow"
                android:background="@android:color/transparent"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVNumberParticipants"
            android:layout_margin="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/TVDateVenue"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:textAlignment="center"
            app:drawableLeftCompat="@drawable/ic_baseline_person_outline_24"
            android:background="@drawable/rounded_corner_blue"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>