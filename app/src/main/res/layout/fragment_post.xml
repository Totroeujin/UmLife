<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/uni_life_homepage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PostFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/AppTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/medium_persian_blue"
            android:layout_weight="1"
            android:textSize="25sp"
            android:layout_gravity="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:civ_border_color="@color/purple_700"
            android:layout_gravity="center"
            android:src="@drawable/ic_create_post"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PostUser"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/customborder">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:civ_border_color="@color/celtic_blue"
            app:civ_border_width="1dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_dummy_avatar"
            android:layout_marginEnd="8dp"
            />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Digital Express"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@digital_express"
                android:textColor="@color/white"/>
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chat" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="#FFF">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_profile_image1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:civ_border_color="@color/celtic_blue"
                    app:civ_border_width="1dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dummy_avatar_1" />

                <TextView
                    android:id="@+id/tvName1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="pikapika"
                    android:layout_marginStart="8dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/celtic_blue"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="400dp"
                android:maxWidth="400dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/dummy_post" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="This is beautiful, I like this flower"
                android:textSize="15sp"
                android:textColor="@color/celtic_blue"
                android:background="#FFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="25dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:civ_border_color="@color/celtic_blue"
                    app:civ_border_width="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_dummy_avatar_1"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="218dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:hint="Leave your thoughts"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:ignore="KeyboardInaccessibleWidget" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="234 comments"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="#FFF">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_profile_image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:civ_border_color="@color/celtic_blue"
                    app:civ_border_width="1dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dummy_avatar_1" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="pikapika"
                    android:layout_marginStart="8dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/celtic_blue"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgPost1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="400dp"
                android:maxWidth="400dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/dummy_post" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="This is beautiful, I like this flower"
                android:textSize="15sp"
                android:textColor="@color/celtic_blue"
                android:background="#FFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:civ_border_color="@color/celtic_blue"
                    app:civ_border_width="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_dummy_avatar_1"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="218dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:hint="Leave your thoughts"
                    app:boxCornerRadiusBottomEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusTopStart="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:ignore="KeyboardInaccessibleWidget" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="234 comments"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:layout_gravity="center"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>