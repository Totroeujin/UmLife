<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateOrEditEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Images : "
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <ImageView
                    android:id="@+id/eventImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/empty_photo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Name : "
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/eventName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:hint="music run"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Date : "
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/eventDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="date"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:hint="31-12-2022"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Venue : "
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/eventVenue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Universiti Malaya"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Registration : "
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/openRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:inputType="date"
                    android:hint="24-10-2022"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Registration : "
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/endRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:inputType="date"
                    android:hint="30-10-2022"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail : "
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/eventDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:hint="music run is a fun event"/>

                <!--
                <TextView
                    android:id="@+id/organiserEmailLocate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organiser Email : "
                    android:textColor="@color/dark_blue"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/organiserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:hint="musicRun@gmail.com"/>
                -->

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="PUBLISH"
                    android:layout_gravity="right"
                    tools:layout_editor_absoluteX="148dp"
                    tools:layout_editor_absoluteY="266dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>