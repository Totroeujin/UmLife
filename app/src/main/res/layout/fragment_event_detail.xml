<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/fragmentEventDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/IVEventDetailImage"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#FBE0C4">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/OrganiserCardView"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/IVEventDetailOrganiser"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TVCreatedBy"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/OrganiserCardView"
                    android:text="CREATED BY"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/TVOrganiserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TVCreatedBy"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@id/OrganiserCardView"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/BtnEventDetailContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/TVCreatedBy"
                    android:layout_alignBottom="@id/TVOrganiserName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_blue"
                    android:padding="2sp"
                    android:text="CONTACT"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TVEventDetailTitle"
                    android:layout_below="@id/OrganiserCardView"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="28sp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/BtnWriteReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/BtnEventDetailReview"
                    android:layout_alignTop="@id/BtnEventDetailReview"
                    android:layout_alignBottom="@id/BtnEventDetailReview"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_corner_blue"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Write Review"/>
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BtnEventDetailReview"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/TVEventDetailTitle"
                    android:layout_alignBottom="@id/TVEventDetailTitle"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_corner_blue"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Review"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/locationCardView"
                    app:cardCornerRadius="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/TVEventDetailTitle">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/location"
                        android:padding="5sp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TVEventDetailDate"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/locationCardView"
                    android:layout_below="@id/TVEventDetailTitle"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TVEventDetailVenue"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/locationCardView"
                    android:layout_below="@id/TVEventDetailDate"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/RegistrationDateCardView"
                    app:cardCornerRadius="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/locationCardView">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/date"
                        android:padding="5sp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TVEventDetailRegistrationDateTitle"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/RegistrationDateCardView"
                    android:layout_below="@id/locationCardView"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Registration date: "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TVEventDetailRegistrationDate"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/RegistrationDateCardView"
                    android:layout_below="@id/TVEventDetailRegistrationDateTitle"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/ratingCardView"
                    app:cardCornerRadius="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/RegistrationDateCardView">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TVEventDetailRating"
                        android:padding="5sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#0061A8"
                        android:textSize="24sp"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <RatingBar
                    android:id="@+id/EventDetailRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RegistrationDateCardView"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/ratingCardView"
                    android:isIndicator="true"
                    android:scaleX="0.7"
                    android:scaleY="0.7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/EventDetailRatingNumber"
                    android:layout_alignBottom="@id/ratingCardView"
                    android:layout_alignStart="@id/EventDetailRatingBar"
                    android:layout_alignEnd="@id/EventDetailRatingBar"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TVEventInfoTitle"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/ratingCardView"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Event Detail"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TVEventDetailInfo"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/TVEventInfoTitle"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BtnEventDetailJoin"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/TVEventDetailInfo"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/rounded_corner_blue"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:text="JOIN"/>

            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>
